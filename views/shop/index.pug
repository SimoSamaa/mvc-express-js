extends ../base/main.pug

block content
  h1.title products shop

  if products.length === 0
    h3.title.text-xl no products in shop
  else
    ul.products
      each prod in products
        li.prod.shadow.bg-white.rounded.border-2.border-red-500.text-center.py-4
          h3.font-semibold.text-lg #{prod.title}
          img(src=prod.imageUrl alt=prod.title style='height: 349px').w-full.object-center.object-cover.my-2
          p $#{prod.price}
          p.p-2 #{prod.description}
          form(action="/cart" method='POST')
            input(type="hidden" name="productId" value=prod.id)
            button.btn.shadow add to cart